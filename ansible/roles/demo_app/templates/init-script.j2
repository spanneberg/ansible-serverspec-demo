#! /bin/sh
### BEGIN INIT INFO
# Provides:          <%= @provides %>
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Example initscript
# Description:       This file should be used to construct scripts to be
#                    placed in /etc/init.d.
### END INIT INFO

# PATH should only include /usr/* if it runs after the mountnfs.sh script
NAME=demo_app
DAEMON_USER=app
DAEMON=/usr/bin/java
DAEMON_OPTS="-jar /opt/demo-app/demo-app.jar"
PIDFILE=/var/run/demo_app.pid

#
# Function that starts the daemon/service
#
start()
{
	echo "Starting $NAME ..."
	start-stop-daemon --start --background --quiet --pidfile $PIDFILE --user $DAEMON_USER --chuid $DAEMON_USER --exec $DAEMON -- $DAEMON_OPTS > /dev/null
}

#
# Function that stops the daemon/service
#
stop()
{
	echo "Stopping $NAME ..."
	start-stop-daemon --stop --quiet --retry=TERM/30/KILL/5 --pidfile $PIDFILE --user $DAEMON_USER --exec $DAEMON
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart|force-reload)
	stop
	start
	;;
  *)
	echo "Usage: $0 {start|stop|restart|force-reload}" >&2
	exit 3
	;;
esac
